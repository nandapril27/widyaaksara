<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/asset_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="30dp"
        android:text="Pengenalan Aksara Sunda"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <ImageView
        android:id="@+id/garis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/asset_garis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvJudul" />

    <ImageView
        android:id="@+id/AksaraSunda"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/asset_pengenalan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/garis" />

    <!-- ScrollView untuk konten -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toBottomOf="@id/AksaraSunda"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMateri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:backgroundTint="@color/blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvMateri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aksara Sunda adalah aksara tradisional yang digunakan untuk menulis bahasa Sunda.
                    Aksara Sunda adalah aksara tradisional yang digunakan untuk menulis bahasa Sunda.
                    Aksara Sunda adalah aksara tradisional yang digunakan untuk menulis bahasa Sunda.
                    Aksara Sunda adalah aksara tradisional yang digunakan untuk menulis bahasa Sunda.
                    Aksara Sunda adalah aksara tradisional yang digunakan untuk menulis bahasa Sunda.
                    Aksara Sunda adalah aksara tradisional yang digunakan untuk menulis bahasa Sunda.
                    Aksara Sunda adalah aksara tradisional yang digunakan untuk menulis bahasa Sunda.
                    Aksara Sunda adalah aksara tradisional yang digunakan untuk menulis bahasa Sunda.
                    Aksara Sunda adalah aksara tradisional yang digunakan untuk menulis bahasa Sunda.
                    Aksara Sunda adalah aksara tradisional yang digunakan untuk menulis bahasa Sunda.
                    Aksara Sunda adalah aksara tradisional yang digunakan untuk menulis bahasa Sunda.
                    Aksara Sunda adalah aksara tradisional yang digunakan untuk menulis bahasa Sunda.
                    Aksara Sunda adalah aksara tradisional yang digunakan untuk menulis bahasa Sunda.
                    Aksara Sunda adalah aksara tradisional yang digunakan untuk menulis bahasa Sunda.
                    Aksara Sunda adalah aksara tradisional yang digunakan untuk menulis bahasa Sunda."
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:paddingBottom="10dp" />

                <ImageView
                    android:id="@+id/imgMateri"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/aksara_angka_0"
                    android:layout_gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
