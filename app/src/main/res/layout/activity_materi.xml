<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E3F2FD">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/asset_logo" />

    <TextView
        android:id="@+id/tvMateri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="24dp"
        android:layout_marginStart="30dp"
        android:text="Materi"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/garis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMateri"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/asset_garis" />


    <!-- Pengenalan Aksara -->
    <Button
        android:id="@+id/btnPengenalan"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/garis"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_rounded"
        android:text="PUSTAKA AKSARA SUNDA"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:padding="8dp"/>

    <!-- Jenis Aksara -->
    <Button
        android:id="@+id/btnJenis"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/btnPengenalan"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_rounded"
        android:text="JENIS-JENIS AKSARA"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:padding="8dp"/>
</RelativeLayout>
