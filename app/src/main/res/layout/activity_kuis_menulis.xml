<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/asset_logo" />

    <TextView
        android:id="@+id/tvMateri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="24dp"
        android:layout_marginStart="30dp"
        android:text="Menulis Aksara"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/garis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMateri"
        android:layout_marginStart="30dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/asset_garis" />


    <!-- Aksara Swara -->
    <Button
        android:id="@+id/btnMenulisSwara"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_rounded"
        android:padding="8dp"
        android:layout_below="@id/garis"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="AKSARA SWARA"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <!-- Aksara Ngalagena 1 -->
    <Button
        android:id="@+id/btnMenulisNgalagena1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_rounded"
        android:padding="8dp"
        android:layout_below="@id/btnMenulisSwara"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:text="AKSARA NGALAGENA (1)"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <!-- Aksara Ngalagena 2 -->
    <Button
        android:id="@+id/btnMenulisNgalagena2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_rounded"
        android:padding="8dp"
        android:layout_below="@id/btnMenulisNgalagena1"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:text="AKSARA NGALAGENA  (2)"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <!-- Aksara Ngalagena 3 -->
    <Button
        android:id="@+id/btnMenulisNgalagena3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/button_rounded"
        android:padding="8dp"
        android:layout_below="@id/btnMenulisNgalagena2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:text="AKSARA NGALAGENA  (3)"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
</RelativeLayout>
