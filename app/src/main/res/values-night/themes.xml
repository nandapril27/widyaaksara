<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme untuk mode gelap -->
    <style name="Base.Theme.WidyaAksara" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Gunakan warna yang sama dengan light mode -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryContainer">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorTertiary">@color/blue</item>

        <!-- Warna teks di dalam button agar tetap terbaca -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Warna latar belakang agar tetap hitam untuk dark mode -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>

    </style>

    <!-- Tema aplikasi utama dalam mode gelap -->
    <style name="Theme.WidyaAksara" parent="Base.Theme.WidyaAksara" />

</resources>
